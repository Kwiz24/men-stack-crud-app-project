<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sneakers App</title>
    <link rel="stylesheet" href="/css/app.css">
</head>
<body>
    <h1>Welcome to the Sneakers app</h1>
    <a href="/sneakers">Browse Sneakers</a><br>
    <a href="/sneakers/new">Add New Sneaker</a><br>
    <br>

    <!-- Display Sneakers -->
    <h2>Sneakers</h2>
    <ul>
        <% sneakers.forEach(sneaker => { %>
            <li>
                <a href="/sneakers/<%= sneaker._id %>"><%= sneaker.name %></a>
                <a href="/sneakers/update">Update Sneaker Size & Color</a><br>
            </li>
        <% }); %>
    </ul>

    <!-- Display Apparel -->
    <h2>Apparel</h2>
    <ul>
        <% apparel.forEach(item => { %>
            <li><%= item.name %></li>
        <% }); %>
    </ul>

    <!-- Display Brands -->
    <h2>Brands</h2>
    <ul>
        <% brands.forEach(brand => { %>
            <li><%= brand.name %></li>
        <% }); %>
    </ul>

    <!-- Pagination links -->
    <% if (pages > 1) { %>
        <div>
            <% if (current > 1) { %>
                <a href="?page=1">First</a>
                <a href="?page=<%= current - 1 %>">Previous</a>
            <% } %>
            <% if (current < pages) { %>
                <a href="?page=<%= current + 1 %>">Next</a>
                <a href="?page=<%= pages %>">Last</a>
            <% } %>
        </div>
    <% } %>

    <!-- Sorting links -->
    <div>
        <a href="/sneakers/sort/name">Sort by Name</a>
        <a href="/sneakers/sort/size">Sort by Size</a>
        <a href="/sneakers/sort/color">Sort by Color</a>
    </div>

    <!-- Search form -->
    <form action="/sneakers/search" method="GET">
        <label for="search">Search Sneakers:</label>
        <input type="text" name="q" id="search" placeholder="Enter search query">
        <button type="submit">Search</button>
    </form>

</body>
</html>
