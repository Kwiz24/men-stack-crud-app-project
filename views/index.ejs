<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sneakers App</title>
    <link rel="stylesheet" href="/css/app.css">
</head>
<body>
    <h1>Welcome to the Sneakers app</h1>
    <a href="/sneakers">Browse Sneakers</a><br>
    <a href="/sneakers/new">Add New Sneaker</a><br>
    <br>

    <!-- Display Sneakers -->
    <h2>Sneakers</h2>
    <ul>
        <% sneakers.forEach(sneaker => { %>
            <li>
                <a href="/sneakers/<%= sneaker._id %>"><%= sneaker.name %></a>
            </li>
        <% }); %>
    </ul>

    <!-- Search form -->
    <form action="/sneakers/search" method="GET">
        <label for="search">Search Sneakers:</label>
        <input type="text" name="q" id="search" placeholder="Enter search query">
        <button type="submit">Search</button>
    </form>

    <% sneakers.forEach(sneaker => { %>
        <div class="sneaker-list">
            <% sneakers.forEach(sneaker => { %>
                <div class="sneaker-card">
                    <img src="<%= sneaker.imageUrl %>" alt="<%= sneaker.name %>">
                    <h2><%= sneaker.name %></h2>
                    <p>Color: <%= sneaker.color %></p>
                    <p>Size: <%= sneaker.size %></p>
                    <% if (sneaker.isReadyToView) { %>
                        <p>This sneaker is ready to view!</p>
                    <% } else { %>
                        <p>This sneaker is not ready to view!</p>
                    <% } %>
                </div>
            <% }); %>
        </div>
    <% }); %>

</body>
</html>
